<% include partials/header %>

<div class="ui main text container segment">

        <div class="ui huge header">
            Edit <%= blog.title %>
        </div>
        
        <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST" class="ui form">
            
            <div class="field">
                <label>Title:</label>
                <input type="text" name="title" value=<%=blog.title%>>
            </div>
            
            <div class="field">
                <label>Image URL:</label>
                <input type="text" name="image" value=<%=blog.image%>>
            </div>
           
           <div class="field">
                <label>Body:</label>
                <textarea name="body"><%=blog.body%></textarea>
           </div>
           
           <button class="ui violet basic big button" type="submit">Submit</button>
        
        </form>
   
</div>

<% include partials/footer %>